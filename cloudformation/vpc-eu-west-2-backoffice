AWSTemplateFormatVersion: '2010-09-09'
Description: 'Create a VPC with 2 Private and 2 Public Subnets for Backoffice use'

Resources:
  # VPC
  backoffice: 
    Type: AWS::EC2::VPC
    Properties:
      CidrBlock: 10.50.0.0/16
      EnableDnsHostnames: true
      EnableDnsSupport: true
      Tags:
        - Key: Name
          Value: vpc-eu-west-2-backoffice

  # SUBNETS     
  PublicSubnet1:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref backoffice
      AvailabilityZone: eu-west-2a
      CidrBlock: 10.50.1.0/24
      MapPublicIpOnLaunch: true
      Tags:
        - Key: Name
          Value: pubnet-eu-west-2a-backoffice-1

  PublicSubnet2:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref backoffice
      AvailabilityZone: eu-west-2b
      CidrBlock: 10.50.101.0/24
      MapPublicIpOnLaunch: true
      Tags:
        - Key: Name
          Value: pubnet-eu-west-2b-backoffice-2

  PrivateSubnet1:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref backoffice
      AvailabilityZone: eu-west-2a
      CidrBlock: 10.50.2.0/24
      MapPublicIpOnLaunch: false
      Tags:
        - Key: Name
          Value: prinet-eu-west-2a-backoffice-1

  PrivateSubnet2:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref backoffice
      AvailabilityZone: eu-west-2b
      CidrBlock: 10.50.102.0/24
      MapPublicIpOnLaunch: false
      Tags:
        - Key: Name
          Value: prinet-eu-west-2b-backoffice-2

  # INTERNET GATEWAY
  InternetGateway:
    Type: AWS::EC2::InternetGateway
    Properties:
      Tags:
        - Key: Name
          Value: intgw-backoffice

  GatewayToInternet:
    Type: AWS::EC2::VPCGatewayAttachment
    Properties:
      VpcId: !Ref backoffice
      InternetGatewayId: !Ref InternetGateway

  # PUBLIC ROUTING
  PublicRouteTable:
    Type: AWS::EC2::RouteTable
    Properties:
      VpcId: !Ref backoffice
      Tags:
        - Key: Name
          Value: rt-eu-west-2-public-backoffice

  PublicRoute:
    Type: AWS::EC2::Route
    DependsOn: GatewayToInternet
    Properties:
      RouteTableId: !Ref PublicRouteTable
      DestinationCidrBlock: 0.0.0.0/0
      GatewayId: !Ref InternetGateway

  PublicSubnet1RouteTableAssociation:
    Type: AWS::EC2::SubnetRouteTableAssociation
    Properties:
      SubnetId: !Ref PublicSubnet1
      RouteTableId: !Ref PublicRouteTable

  PublicSubnet2RouteTableAssociation:
    Type: AWS::EC2::SubnetRouteTableAssociation
    Properties:
      SubnetId: !Ref PublicSubnet2
      RouteTableId: !Ref PublicRouteTable

  # NAT GATEWAY
  NatGateway:
    Type: AWS::EC2::NatGateway
    DependsOn: NatPublicIP
    Properties: 
      SubnetId: !Ref PublicSubnet1
      AllocationId: !GetAtt NatPublicIP.AllocationId
      Tags:
        - Key: Name
          Value: natgw-backoffice

  # ELASTIC IP
  NatPublicIP:
    Type: AWS::EC2::EIP
    DependsOn: backoffice
    Properties:
      Domain: vpc
      Tags:
        - Key: Name
          Value: ep-natgw-appstream

  # PRIVATE ROUTING
  PrivateRouteTable:
    Type: AWS::EC2::RouteTable
    Properties:
      VpcId: !Ref backoffice
      Tags:
        - Key: Name
          Value: rt-eu-west-2-private-backoffice

  PrivateRoute:
    Type: AWS::EC2::Route
    Properties:
      NatGatewayId: !Ref NatGateway
      RouteTableId: !Ref PrivateRouteTable
      DestinationCidrBlock: 0.0.0.0/0

  PrivateSubnet1RouteTableAssociation:
    Type: AWS::EC2::SubnetRouteTableAssociation
    Properties:
      SubnetId: !Ref PrivateSubnet1
      RouteTableId: !Ref PrivateRouteTable